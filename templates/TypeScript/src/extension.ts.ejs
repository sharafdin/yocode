// Import VS Code's API for extension development
import * as vscode from 'vscode';

/**
 * This method is called when your extension is activated.
 * Activation happens the first time a registered command is invoked.
 *
 * @param context - Provides access to VS Code extension lifecycle and global storage.
 */
export function activate(context: vscode.ExtensionContext): void {
    console.log('Your extension "<%= name %>" is now active!');

    /**
     * Default Command: "Hello World".
     * This is the default command included with the boilerplate.
     */
    const helloWorldCommand = vscode.commands.registerCommand('<%= name %>.helloWorld', () => {
        vscode.window.showInformationMessage('Hello World from <%= displayName %>!');
    });

    context.subscriptions.push(helloWorldCommand);
}

/**
 * This method is called when your extension is deactivated.
 * Used to clean up resources.
 */
export function deactivate(): void {
    console.log('Your extension has been deactivated.');
}
